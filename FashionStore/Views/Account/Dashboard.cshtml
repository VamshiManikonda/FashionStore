@model FashionStore.Models.User

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div class="body">
    @using (Html.BeginForm("UpdateAccount", "Account", FormMethod.Post))
    {
        <div style="width:98%; margin-left:auto;margin-right:auto">
            <div class="panel panel-default">
                <div class="panel-heading clearfix" style="color:darkgreen">
                    <h3 class="panel-title pull-left"><span style="margin-right: 5px" class="fa fa-briefcase fa-fw"></span>Account Information</h3>
                    <div class="pull-right">
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                                @Html.HiddenFor(x => x.UserName)
                                @Html.HiddenFor(x => x.AdminUser)
                                @Html.LabelFor(x => x.FirstName):
                                @Html.TextBoxFor(x => x.FirstName, new { Class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.LastName):<br />
                                @Html.TextBoxFor(x => x.LastName, new { Class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Email):<br />
                                @Html.TextBoxFor(x => x.Email, new { Class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Phone):
                                @Html.TextBoxFor(x => x.Phone, new { Class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Phone)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Address):
                                @Html.TextBoxFor(x => x.Address, new { Class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Address)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.City):
                                @Html.TextBoxFor(x => x.City, new { Class = "form-control" })
                                @Html.ValidationMessageFor(x => x.City)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.State):
                                @Html.TextBoxFor(x => x.State, new { Class = "form-control" })
                                @Html.ValidationMessageFor(x => x.State)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Country):
                                @Html.TextBoxFor(x => x.Country, new { Class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.ZipCode):
                                @Html.TextBoxFor(x => x.ZipCode, new { Class = "form-control" })
                            </div>
                            <div class="form-group">
                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <label class="label label-danger">@ViewBag.ErrorMessage</label>
                                }
                            </div>
                        </div>   
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success  pull-right"><span class="fa fa-upload fa-fw"></span>Update Account</button>
                </div>
            </div>
        </div>
    }
</div>
<br/><br /><br /><br />